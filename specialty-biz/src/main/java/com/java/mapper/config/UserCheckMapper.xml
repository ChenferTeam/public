<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.mapper.mapper.UserCheckMapper">

    <insert id="add" parameterType="com.java.model.user.UserCheck">
        insert into user_check (id,user_name,user_id,user_pwd,user_email,user_phone)
        VALUE (#{id},#{user_name},#{user_id},#{user_pwd},#{user_email},#{user_phone})
    </insert>
    <select id="find" resultType="com.java.model.user.UserCheck" parameterType="com.java.model.user.UserCheck">
        select * from user_check where 1=1
        <if test="id != null and id !='' ">
            and id =#{id}
        </if>
        <if test="user_name != null and user_name !='' ">
            and user_name =#{user_name}
        </if>
        <if test="user_id != null and user_id !='' ">
            and user_id =#{user_id}
        </if>
        <if test="user_pwd != null and user_pwd !='' ">
            and user_pwd =#{user_pwd}
        </if>
        <if test="user_email != null and user_email !='' ">
            and user_email =#{user_email}
        </if>
        <if test="user_phone != null and user_phone !='' ">
            and user_phone =#{user_phone}
        </if>
    </select>
    <select id="login" resultType="com.java.model.user.UserCheck">
         select * from user_check where 1=1
         and (user_id=#{userName} or user_email=#{userName} or user_phone=#{userName})
         and user_pwd = #{userPwd}
    </select>
</mapper>
